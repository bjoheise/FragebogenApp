            </children>
        </VBox>
        <Button fx:id="nextButton" layoutX="399.0" layoutY="236.0" mnemonicParsing="false" onAction="#nextQuestion" text="Weiter" />
      <Text fx:id="labelQuestion" layoutX="135.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hier steht der Text der Frage" textOrigin="BOTTOM" wrappingWidth="315.13671875" />
      <Label fx:id="questionCounter" layoutX="135.0" layoutY="240.0" prefHeight="17.0" prefWidth="107.0" text="Label" />
